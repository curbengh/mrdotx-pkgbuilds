# Maintainer: mrdotx <klassiker@gmx.de>
_pkgname=gimp
pkgname=gimp-stripped
pkgver=2.10.36
pkgrel=1
pkgdesc='GNU Image Manipulation Program (stripped from most unnecessary dependencies)'
url='https://www.gimp.org'
arch=('x86_64')
license=('GPL' 'LGPL')
conflicts=("$_pkgname")
provides=("$_pkgname")
depends=(
    # core deps
    'babl'
    # 'cairo'
    # 'fontconfig'
    # 'freetype2'
    # 'gcc-libs'
    # 'gdk-pixbuf2'
    'gegl'
    # 'glib2'
    # 'glibc'
    'gtk2'
    # 'harfbuzz'
    # 'hicolor-icon-theme'
    # 'iso-codes'
    # 'json-glib'
    # 'lcms2'
    'libgexiv2'
    # 'libmypaint'
    # 'libunwind'
    'mypaint-brushes1'
    # 'pango'
    # 'zlib'

    # plugins deps
    # 'bzip2'
    # 'libgudev'
    # 'libheif'
    # 'libjpeg-turbo'
    # 'libjxl'
    # 'libmng'
    # 'libpng'
    # 'librsvg'
    # 'libtiff'
    # 'libwebp'
    # 'libwmf'
    # 'libx11'
    # 'libxcursor'
    # 'libxext'
    # 'libxfixes'
    # 'libxmu'
    # 'libxpm'
    # 'openexr'
    # 'openjpeg2'
    'poppler-data'
    'poppler-glib'
    # 'xz'
)
makedepends=(
    # 'alsa-lib'
    # 'ghostscript'
    # 'gtk-doc'
    # 'gvfs'
    'intltool'

    'iso-codes'
)
optdepends=(
    'alsa-lib: for MIDI event controller module'
    'ghostscript: for PostScript support'
    'gutenprint: for sophisticated printing only as gimp has built-in cups print support'
    'gvfs: for HTTP/S support (and many other schemes)'
)
options=(
    '!emptydirs'
    '!docs'
)
_archive="$_pkgname-$pkgver"
source=("https://download.gimp.org/gimp/v${pkgver%.*}/$_archive.tar.bz2")
b2sums=('d033cd1407df3399b5968b7e3f7838d288143080b516476a5dd46599b6a84ac2efca591521368cef7a1c3d9935b45ed3262fb469e1ae36ccf60a1199f5cfa44d')

build() {
    cd "$_archive"

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --libexecdir=/usr/bin \
        --disable-dependency-tracking \
        --disable-maintainer-mode \
        --disable-glibtest \
        --disable-gtktest \
        --disable-alsatest \
        --disable-python \
        --disable-check-update \
        --disable-gimp-console \
        --without-gs \
        --without-libmng \
        --without-aa \
        --without-libxpm \
        --without-openexr \
        --without-webp \
        --without-libheif \
        --without-jpegxl \
        --without-libbacktrace \
        --without-libunwind \
        --without-webkit \
        --without-print \
        --without-cairo-pdf \
        --without-wmf \
        --without-jpeg2000 \
        --without-xmc \
        --without-alsa \
        --without-linux-input \
        --without-gudev \
        --without-xvfb-run \
        --without-appdata-test
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make
}

package() {
    cd "$_archive"
    make DESTDIR="$pkgdir" install
    rm -r "$pkgdir/usr/share/man"
    ln -s "gimptool-2.0" "$pkgdir/usr/bin/gimptool"
}
